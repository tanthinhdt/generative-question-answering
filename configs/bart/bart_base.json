{
    "model": {
        "name": "bart-base",
        "pretrained": "a-ware/bart-squadv2"
    },
    "dataset": {
        "dir": "data/ELI5",
        "tokenizer_configs": {
            "encoder": {
                "max_length": 250,
                "truncation": true,
                "pad_to_max_length": true
            },
            "decoder": {
                "max_length": 250,
                "truncation": true,
                "pad_to_max_length": true
            }
        }
    },
    "train": {
        "output_dir": "checkpoints/bart/bart_base",
        "overwrite_output_dir": true,
        "do_train": true,
        "do_eval": true,
        "do_predict": false,
        "evaluation_strategy": "steps",
        "per_device_train_batch_size": 16,
        "per_device_eval_batch_size": 16,
        "learning_rate": 2e-5,
        "num_train_epochs": 3,
        "max_steps": 5000,
        "weight_decay": 0.01,
        "logging_dir": "logs/bart/bart_base",
        "logging_strategy": "steps",
        "logging_steps": 100,
        "save_strategy": "steps",
        "save_steps": 500,
        "save_total_limit": 5,
        "run_name": "generative-question-answering",
        "report_to": "wandb",
        "auto_find_batch_size": true
    },
    "knowledge": {
        "configs_path": "configs/knowledge.json"
    }
}